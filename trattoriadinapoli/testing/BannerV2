<style>
  /* === Brand Colors === */
  :root {
    --bg: #F5F5F5;         /* White Smoke */
    --text: #141414;       /* Night Black */
    --accent: #B1871B;     /* Dark Goldenrod */
    --rosewood: #640214;   /* Rosewood */
    --hover: #105200;      /* Cal Poly Green */

    /* Italian Flag Colors */
    --green: #009246;
    --white: #ffffff;
    --red: #ce2b37;
  }

  /* === Banner Container === */
  #daily-special-banner {
    width: 100%;
    display: flex;
    align-items: center;
    overflow: hidden;
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    white-space: nowrap;
    position: relative;
    height: 70px;
    border-top: 5px solid var(--accent);
    border-bottom: 5px solid var(--accent);
    color: var(--text);

    /* Animated Italian flag background */
    background: linear-gradient(
      90deg,
      var(--green) 0%,
      var(--green) 33%,
      var(--white) 33%,
      var(--white) 66%,
      var(--red) 66%,
      var(--red) 100%,
      var(--green) 100%
    );
    background-size: 150% 100%;
    animation: flagWave 18s linear infinite;
  }

  /* === Scrolling Track === */
  #slide-track {
    display: inline-block;
    white-space: nowrap;
    animation: slide-left 36s linear infinite;
  }

  /* === Messages === */
  #slide-track span {
    display: inline-block;
    padding: 0 3rem;
    vertical-align: middle;
  }

  #special-text {
    color: var(--text);
  }

  #cta-text {
    color: var(--text);
  }

  .divider {
    color: var(--text);
    font-weight: 400;
    font-size: 1.8rem;
  }

  /* === Animation: Slide Left === */
  @keyframes slide-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* === Animation: Italian Flag Wave === */
  @keyframes flagWave {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 300% 0%;
    }
  }

  /* === Optional Pause on Hover === */
  #daily-special-banner:hover #slide-track {
    animation-play-state: paused;
  }

