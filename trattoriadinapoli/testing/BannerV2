<script>
  document.addEventListener("DOMContentLoaded", () => {
    const specials = {
      0: "Sorry we're closed today. You can always use online resources for catering requests or reservations for when we're open though!",
      1: "Sorry we're closed today. You can always use online resources for catering requests or reservations for when we're open though!",
      2: "Join us for Veal Night! Enjoy your favorite pastas with delicious veal.",
      3: "Join us for Pizza Night! Try our hand-tossed specialty pizza and wine pairings.",
      4: "Join us for Steak Night! Juicy steaks cooked to perfection.",
      5: "Come join us for dinner! Call us or use the link on our homepage to place a reservation.",
      6: "Come join us for dinner! Call us or use the link on our homepage to place a reservation."
    };

    const today = new Date().getDay();
    const dailySpecial = specials[today];
    const marketingCTA = "Use the form at the bottom of our catering page to submit a request today!";

    const track = document.getElementById("slide-track");
    const specialEl = document.getElementById("special-text");
    const ctaEl = document.getElementById("cta-text");

    // Populate content
    specialEl.textContent = dailySpecial;
    ctaEl.textContent = marketingCTA;

    // Duplicate full track to make loop seamless
    track.innerHTML = track.innerHTML + track.innerHTML;
  });
</script>
